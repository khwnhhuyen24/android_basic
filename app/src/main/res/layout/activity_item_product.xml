<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="7dp"
    android:background="#F8F6F6"
    android:elevation="2dp">

    <!-- Ảnh sản phẩm -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageProduct"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="5dp"
        android:scaleType="centerCrop"
        android:background="@drawable/login_tiktok" />

    <!-- Rating và nhận xét -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="start">

        <!-- RatingBar -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:rating="3.5"
            android:layout_marginTop="2dp"
            android:foregroundGravity="right"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/RatingBarStyle"
            android:scaleX="0.5"
            android:scaleY="0.5"/>

        <TextView
            android:id="@+id/textReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="start"
            android:layout_marginTop="7dp"
            android:textColor="#CC0146"
            android:textSize="7sp"
            android:maxLines="1" />

        <!-- Số lượt đánh giá -->
        <TextView
            android:id="@+id/textReviewLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:text=""
            android:paddingEnd="3dp"
            android:textColor="#DB0C52"
            android:textSize="7sp" />


    </LinearLayout>

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/textProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:paddingEnd="5dp"
        android:layout_marginStart="5dp"
        android:textColor="#000"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp" />

    <!-- Giá và đã bán -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:layout_marginTop="4dp">

        <!-- Giá cũ -->
        <TextView
            android:id="@+id/textOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            android:textColor="#888"
            android:text="" />

        <!-- Giá mới -->
        <TextView
            android:id="@+id/textNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="3dp"
            android:text="" />

        <!-- Đã bán -->
        <TextView
            android:id="@+id/textSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:maxLines="1"
            android:textColor="#777"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:layout_marginStart="3dp"
            android:text="" />
    </LinearLayout>

</LinearLayout>