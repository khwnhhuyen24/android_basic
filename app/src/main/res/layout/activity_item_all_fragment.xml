<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="11dp"
    android:background="#F8F6F6"
    android:elevation="2dp">

    <!-- Ảnh sản phẩm bo góc -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageProduct"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:background="@drawable/login_tiktok"/>

    <!-- Rating và nhận xét -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="left">

        <!-- RatingBar -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/RatingBarStyle" />

        <!-- Số lượng đánh giá -->

        <TextView
            android:id="@+id/textReviewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text=" "
            android:textColor="#DB0C52"
            android:textSize="12sp" />
        <!-- Nhận xét -->
        <TextView
            android:id="@+id/textReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#CC0146"
            android:layout_marginStart="76dp" />
    </LinearLayout>


    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/textProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp" />

    <!-- Giá -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <!-- Giá gốc -->
        <TextView
            android:id="@+id/textOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#888"
            />

        <!-- Giá mới -->
        <TextView
            android:id="@+id/textNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <!-- Đã bán -->
    <TextView
        android:id="@+id/textSold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#777"
        android:layout_marginTop="2dp"
        android:layout_gravity="end" />

</LinearLayout>
