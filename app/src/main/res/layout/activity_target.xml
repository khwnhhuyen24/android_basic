<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TargetActivity"
    android:background="#FFFFFF">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="386dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Lựa chọn lĩnh vực bạn quan tâm"
        android:textColor="#313D40"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/beauty"
        android:layout_width="185dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="113dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal"
        android:text="Beauty - Sức khoẻ và sắc đẹp"
        android:textSize="14sp"
        android:textColor="#313D40"/>
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beauty"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="190dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbChamSocDaMat"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Chăm sóc da mặt"
            android:textSize="13sp"
            android:textColor="#2E2E2E"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbMakeup"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Makeup"
            android:textSize="13sp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"
            android:textColor="#2E2E2E" />

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbVitamin"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Vitamin &amp;thực phẩm chức năng"
            android:textColor="#2E2E2E"
            android:textSize="13sp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/beauty"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="175dp"
        android:orientation="vertical">

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbChamSocCoThe"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Chăm sóc cơ thể"
            android:textSize="13sp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:textColor="#2E2E2E"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbChamSocToc"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textColor="#2E2E2E"
            android:text="Chăm sóc tóc"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbChamSocRangMieng"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#2E2E2E"
            android:text="Chăm sóc răng miệng"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:textColor="#313D40"
        android:textStyle="normal"
        android:text="Fashion - Thời trang và phụ kiện"
        android:layout_marginTop="359dp"/>
    
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/beauty"
        android:layout_marginTop="259dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="190dp"
        android:orientation="vertical">

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbAoNu"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Áo nữ"
            android:textSize="13sp"
            android:textColor="#2E2E2E"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbChanVay"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chân váy"
            android:textSize="13sp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:textColor="#2E2E2E"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbAoNam"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Áo nam"
            android:textSize="13sp"
            android:textColor="#2E2E2E"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbPhuKien"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Phụ kiện"
            android:textSize="13sp"
            android:textColor="#2E2E2E"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beauty"
        android:layout_marginTop="259dp"
        android:layout_marginStart="175dp"
        android:orientation="vertical">

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbQuanNu"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textColor="#2E2E2E"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:text="Quần nữ"
            android:textSize="13sp"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbDam"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#2E2E2E"
            android:layout_marginTop="16dp"
            android:text="Đầm"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:background="@drawable/target"/>

        <RadioButton
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/rbQuanNam"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textColor="#2E2E2E"
            android:textSize="13sp"
            android:text="Quần nam"
            android:padding="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_select"
            android:layout_marginTop="16dp"
            android:background="@drawable/target"/>
    </LinearLayout>

     <androidx.appcompat.widget.AppCompatButton
         android:id="@+id/Skip"
         android:layout_width="123dp"
         android:layout_height="49dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toBottomOf="@id/beauty"
         android:layout_marginTop="521dp"
         android:layout_marginStart="69dp"
         android:layout_marginEnd="190dp"
         android:background="@drawable/login_tiktok"
         android:text="Bỏ qua"
         android:textSize="13sp"
         android:layout_marginBottom="24dp"
         android:gravity="center"
         android:textColor="#595D5F"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="123dp"
            android:layout_height="48dp"
            android:text="Lưu"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/beauty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="521dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="171dp"
            android:background="@drawable/login_kol"
            android:gravity="center"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>